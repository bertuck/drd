{% extends "../../_layout-styleguide.twig" %}

{% set title = 'Dropdown Component' %}
{% set bodyclass = 'sg-body-wrapper' %}

{% block sg_main_title %}
    <h2 class="sg-title">Dropdown</h2>
{% endblock %}

{% block main %}

    {% embed "../layout/callout.twig" with {
        callout_type: "sg-callout-warning"
    } %}
        {% block sg_callout_content %}
            <p>
                <a href="https://getbootstrap.com/docs/4.1/components/dropdowns/" target="_blank">Bootstrap dropdowns</a>
            </p>
        {% endblock %}
    {% endembed %}

    {% include "../component/dropdown/dropdown.twig" %}

    {% set path_code = '../../component/dropdown/dropdown.twig' %}
    {% set collapse_id = '00' %}
    {% include "../layout/code/collapse.twig" %}

{% endblock %}